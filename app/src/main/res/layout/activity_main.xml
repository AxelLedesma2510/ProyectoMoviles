<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Ade"
        android:layout_width="234dp"
        android:layout_height="94dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#1F7A8C"
        android:fontFamily="sans-serif"
        android:onClick="Ade"
        android:text="Acerca De"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Herramientas"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/Herramientas"
        android:layout_width="227dp"
        android:layout_height="90dp"
        android:backgroundTint="#1F7A8C"
        android:fontFamily="sans-serif"
        android:onClick="Herramientas"
        android:text="Herramientas"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Ade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LActividades"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/LActividades"
        android:layout_width="227dp"
        android:layout_height="96dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#1F7A8C"
        android:backgroundTintMode="screen"
        android:fontFamily="sans-serif"
        android:onClick="LActividades"
        android:text="Lista de Ambientes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Herramientas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002"
        tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>