<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/LActividades"
        android:layout_width="227dp"
        android:layout_height="96dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:backgroundTintMode="screen"
        android:onClick="LActividades"
        android:text="Lista de Actividades"
        app:layout_constraintBottom_toTopOf="@+id/Herramientas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/Herramientas"
        android:layout_width="227dp"
        android:layout_height="90dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="Herramientas"
        android:text="Herramientas"
        app:layout_constraintBottom_toTopOf="@+id/Ade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LActividades"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/Ade"
        android:layout_width="234dp"
        android:layout_height="94dp"
        android:layout_marginBottom="162dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="Ade"
        android:text="Acerca De"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Herramientas"
        tools:ignore="HardcodedText,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>